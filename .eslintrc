{
  "parserOptions": {
    "ecmaFeatures": {
      "spread": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prefer-spread": "warn",
    "comma-dangle": [ "warn", "always-multiline" ],
    "no-undef": "error",
    "prefer-const": "warn",
    "one-var": [ "warn", "never" ],
    "no-unused-vars": "warn",
    "quote-props": [ "warn", "as-needed" ],
    "quotes": [ "warn", "single" ],
    "prefer-template": "warn",
    "template-curly-spacing": [ "error", "never" ],
    "no-new-wrappers": "error",
    "radix": "error",
    "no-return-await": "warn",
  }
}
